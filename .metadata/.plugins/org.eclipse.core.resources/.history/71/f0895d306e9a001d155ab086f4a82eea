package com.jspider.song;

import java.util.*;
import java.util.ArrayList;

public class Song {
	static Scanner sc=new Scanner(System.in);
	private String id;
	private String name;
	private String album;
	private String singer;
	 private ArrayList<Song> songs=new ArrayList<Song>();
	 

	public Song() {
		// TODO Auto-generated constructor stub
	}

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getAlbum() {
		return album;
	}

	public void setAlbum(String album) {
		this.album = album;
	}

	public String getSinger() {
		return singer;
	}

	public void setSinger(String singer) {
		this.singer = singer;
	}

	@Override
	public String toString() {
		return "Song [id=" + id + ", name=" + name + ", album=" + album + ", singer=" + singer + "]";
	}

	public void addsong() {
		System.out.println("put song id");
		String songid=sc.next();
		System.out.println("put song name");
		String songName=sc.next();
		System.out.println("put album name");
		String album=sc.next();
		System.out.println("put singer name");
		String singer=sc.next();
		System.out.println(songName + "successfully added to the list");
		this.id=songid;
		this.name=songName;
		this.album=album;
		this.singer=singer;
		
		
		
		
		
		// TODO Auto-generated method stub
		
	}

	

}
